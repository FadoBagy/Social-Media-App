@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" title="Home">Social-Media-App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" title="Home">
                            <img src="~/img/site/home.png" alt="Home" />
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a id="chat" class="nav-link text-dark" asp-area="" asp-controller="Chat" asp-action="Index" title="Chat">
                            <img src="~/img/site/chat.png" alt="Chat" />
                            <p>Chat</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Profile" asp-route-id="@UserManager.GetUserId(User)" title="Profile">
                            <img src="~/img/site/profile.png" alt="Profile" />
                            <p>Profile</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Settings">
                            <img src="~/img/site/settings.png" alt="Settings" />
                            <p>Settings</p>
                        </a>
                    </li>
                }
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>